{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "/workspaces/vmc_helty_flow:/usr/src/homeassistant"
            }
        },
        {
            "name": "Python: Test Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-v"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "/workspaces/vmc_helty_flow:/usr/src/homeassistant"
            }
        },
        {
            "name": "Home Assistant",
            "type": "debugpy",
            "request": "launch",
            "module": "homeassistant",
            "args": [
                "--config",
                "/tmp/test_config",
                "--verbose"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "/workspaces/vmc_helty_flow:/usr/src/homeassistant",
                "HASS_CONFIG_DIR": "/tmp/test_config"
            }
        },
        {
            "name": "Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "/workspaces/vmc_helty_flow:/usr/src/homeassistant"
            }
        }
    ]
}
